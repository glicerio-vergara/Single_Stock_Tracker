    "# Function to format market cap\n",
    "def format_market_cap(market_cap):\n",
    "    if market_cap >= 1e12:  # Trillion\n",
    "        return f\"{market_cap / 1e12:.3f} T\"\n",
    "    elif market_cap >= 1e9:  # Billion\n",
    "        return f\"{market_cap / 1e9:.3f} B\"\n",
    "    elif market_cap >= 1e6:  # Million\n",
    "        return f\"{market_cap / 1e6:.3f} M\"\n",
    "    else:\n",
    "        return f\"{market_cap:.2f}\"\n",
    "\n",
    "# Function to identify consolidation periods using KDE\n",
    "def identify_consolidation_kde(stock_data):\n",
    "\n",
    "    stock_data.reset_index(inplace=True)\n",
    "    stock_data = stock_data.rename(columns = {'index':'Date'})\n",
    "\n",
    "    # Use the \"Close\" column for KDE\n",
    "    sample_original = stock_data['Close'].to_numpy()\n",
    "\n",
    "    # Find local maxima and minima\n",
    "    maxima = argrelextrema(sample_original, np.greater)\n",
    "    minima = argrelextrema(sample_original, np.less)\n",
    "    extrema = np.concatenate((maxima, minima), axis=1)[0]\n",
    "    extrema_prices = np.concatenate((sample_original[maxima], sample_original[minima]))\n",
    "\n",
    "    # Estimate PDF using KDE with adjusted bandwidth\n",
    "    initial_price = extrema_prices[0]\n",
    "    kde_bandwidth = initial_price / 700000\n",
    "    kde = KernelDensity(kernel='gaussian', bandwidth=kde_bandwidth).fit(extrema_prices.reshape(-1, 1))\n",
    "\n",
    "    # Get the price range for KDE\n",
    "    a, b = min(extrema_prices), max(extrema_prices)\n",
    "    price_range = np.linspace(a, b, 1000).reshape(-1, 1)\n",
    "\n",
    "    # Calculate the PDF\n",
    "    pdf = np.exp(kde.score_samples(price_range))\n",
    "\n",
    "    # Find peaks in the PDF\n",
    "    peaks = find_peaks(pdf)[0]\n",
    "\n",
    "    # Filter peaks to ensure they are within the DataFrame's index range\n",
    "    valid_peaks = peaks[(peaks >= 0) & (peaks < len(stock_data))]\n",
    "\n",
    "    turning_points = stock_data.iloc[valid_peaks]\n",
    "\n",
    "    return turning_points\n",
    "\n",
    "# Function to identify consolidation periods using Bollinger Bands\n",
    "def identify_consolidation_bollinger(stock_data):\n",
    "    # Calculate Bollinger Bands\n",
    "    stock_data['20MA'] = stock_data['Close'].rolling(window=20).mean()\n",
    "    stock_data['Upper_Band'] = stock_data['20MA'] + 2 * stock_data['Close'].rolling(window=20).std()\n",
    "    stock_data['Lower_Band'] = stock_data['20MA'] - 2 * stock_data['Close'].rolling(window=20).std()\n",
    "    return stock_data\n",
    "\n",
    "# Function to get stock data\n",
    "def get_stock_data(ticker, years_back): \n",
    "    # Calculate the number of days based on years_back\n",
    "    days_back = years_back * 365\n",
    "    end_date = datetime.now()\n",
    "    start_date = end_date - timedelta(days=days_back)  # One year of data\n",
    "\n",
    "    # Fetch historical data\n",
    "    stock_data = yf.download(ticker, start=start_date, end=end_date)\n",
    "\n",
    "    # Additional information\n",
    "    company_info = yf.Ticker(ticker).info\n",
    "    industry = company_info['industry']\n",
    "    sector = company_info['sector']\n",
    "    dividend_yield = company_info['dividendYield'] * 100\n",
    "    company_name = company_info['longName']\n",
    "    market_cap = company_info['marketCap']\n",
    "\n",
    "    # Assuming you have the currency information in the 'company_info' DataFrame\n",
    "    currency = company_info['currency']\n",
    "\n",
    "    # Create a CurrencyRates object\n",
    "    c = CurrencyRates()\n",
    "\n",
    "    # Specify the columns to be converted\n",
    "    columns_to_convert = ['Open', 'Close', 'High', 'Low']\n",
    "\n",
    "    # Convert prices to USD using real-time exchange rates\n",
    "    if currency != 'USD':\n",
    "        for column in columns_to_convert:\n",
    "            # Get the exchange rate from the original currency to USD\n",
    "            exchange_rate = c.get_rate(currency, 'USD')\n",
    "\n",
    "            # Convert the prices to USD\n",
    "            stock_data[column] = stock_data[column] * exchange_rate\n",
    "\n",
    "    # Get 52-Week High and Low based on the last 365 days\n",
    "    stock_data_last_365 = stock_data.tail(365)\n",
    "\n",
    "    week_high = stock_data_last_365['High'].max()\n",
    "    week_low = stock_data_last_365['Low'].min()\n",
    "\n",
    "    # Calculate Price Difference (YoY) on the last 365 days\n",
    "    price_diff_yoy = stock_data_last_365['Close'][-1] - stock_data_last_365['Close'][0]\n",
    "    price_diff_percent = (price_diff_yoy / stock_data['Close'][0]) * 100\n",
    "\n",
    "    # Calculate moving averages\n",
    "    stock_data['SMA50'] = stock_data['Close'].rolling(window=50).mean()\n",
    "    stock_data['SMA100'] = stock_data['Close'].rolling(window=100).mean()\n",
    "    stock_data['SMA200'] = stock_data['Close'].rolling(window=200).mean()\n",
    "\n",
    "    key_information = {\n",
    "        'close_price': stock_data['Close'][-1],\n",
    "        'price_diff_yoy': price_diff_yoy,\n",
    "        'price_diff_percent': price_diff_percent,\n",
    "        'week_high': week_high,\n",
    "        'week_low': week_low,\n",
    "        'sector': sector,\n",
    "        'industry': industry,\n",
    "        'dividend_yield': dividend_yield,\n",
    "        'company_name': company_name,\n",
    "        'market_cap': format_market_cap(market_cap),\n",
    "        'currency' : currency,\n",
    "    }\n",
    "\n",
    "    return key_information, stock_data, stock_data_last_365\n",
    "\n",
    "# Function to create the dashboard\n",
    "def create_dashboard(ticker, years_back):\n",
    "    # Validate that years_back is at least 1\n",
    "    if years_back < 1:\n",
    "        raise ValueError(\"Years back must be at least 1.\")\n",
    "\n",
    "    key_information, stock_data, stock_data_last_365 = get_stock_data(ticker, years_back)\n",
    "\n",
    "    identify_consolidation_bollinger(stock_data_last_365)\n",
    "    \n",
    "    # Use KDE for identifying consolidation periods\n",
    "    turning_points_kde = identify_consolidation_kde(stock_data_last_365)\n",
    "    \n",
    "    \n",
    "\n",
    "    app = dash.Dash(__name__)\n",
    "\n",
    "    # External CSS for dark mode theme\n",
    "    external_stylesheets = ['https://codepen.io/chriddyp/pen/bWLwgP.css']\n",
    "    app = dash.Dash(__name__, external_stylesheets=external_stylesheets)\n",
    "\n",
    "    app.layout = html.Div(children=[\n",
    "    dcc.Location(id='url', refresh=False),\n",
    "\n",
    "    html.H1(f\"Stock Data for {key_information['company_name']}\"),\n",
    "\n",
    "    html.H5(f\"Sector: {key_information['sector']}, Industry: {key_information['industry']}\"),\n",
    "\n",
    "    html.Div([\n",
    "        html.P([\n",
    "            html.Strong(\"Market Cap\"),\n",
    "            html.Br(),\n",
    "            f\"{key_information['market_cap']}\"\n",
    "        ]),\n",
    "        html.P([\n",
    "            html.Strong(\"Dividend Yield\"),\n",
    "            html.Br(),\n",
    "            f\"{key_information['dividend_yield']:.2f}%\"\n",
    "        ]),\n",
    "        html.P([\n",
    "            html.Strong(\"Close Price\"),\n",
    "            html.Br(),\n",
    "            f\"${key_information['close_price']:.2f}\"\n",
    "        ]),\n",
    "        html.P([\n",
    "            html.Strong(\"Price Difference (YoY)\"),\n",
    "            html.Br(),\n",
    "            f\"${key_information['price_diff_yoy']:.2f} \",\n",
    "            html.Span(\n",
    "                f\"({'+' if key_information['price_diff_yoy'] > 0 else '-'}{abs(key_information['price_diff_percent']):.2f}%)\",\n",
    "                style={\n",
    "                    'color': 'green' if key_information['price_diff_yoy'] > 0 else 'red',\n",
    "                    'font-family': 'Sans-Serif'\n",
    "                }\n",
    "            )\n",
    "        ]),\n",
    "        html.P([\n",
    "            html.Strong(\"52-Week Range\"),\n",
    "            html.Br(),\n",
    "                f\"${key_information['week_low']:.2f} - ${key_information['week_high']:.2f}\"\n",
    "        ]),\n",
    "\n",
    "    ], style={'display': 'flex', 'justify-content': 'space-between', 'width': '95%'}),\n",
    "\n",
    "    html.H2(f\"Candlestick Chart: {ticker}\"),\n",
    "\n",
    "    dcc.Graph(\n",
    "        id='candlestick-chart',\n",
    "        figure={\n",
    "            'data': [\n",
    "                {'x': stock_data.index, 'open': stock_data['Open'], 'close': stock_data['Close'],\n",
    "                    'high': stock_data['High'], 'low': stock_data['Low'],\n",
    "                    'type': 'candlestick', 'increasing': {'line': {'color': 'green'}},\n",
    "                    'decreasing': {'line': {'color': 'red'}}},\n",
    "\n",
    "                {'x': stock_data.index, 'y': stock_data['SMA50'], 'type': 'scatter', 'mode': 'lines',\n",
    "                    'line': {'width': .5, 'color': 'lightblue'}, 'name': 'SMA20'},\n",
    "                {'x': stock_data.index, 'y': stock_data['SMA100'], 'type': 'scatter', 'mode': 'lines',\n",
    "                    'line': {'width': .5, 'color': 'cornflowerblue'}, 'name': 'SMA50'},\n",
    "                {'x': stock_data.index, 'y': stock_data['SMA200'], 'type': 'scatter', 'mode': 'lines',\n",
    "                    'line': {'width': .5, 'color': 'darkblue'}, 'name': 'SMA200'},\n",
    "            ],\n",
    "            'layout': {\n",
    "                'xaxis': {'rangeslider': {'visible': False}, 'showgrid': False},\n",
    "                'yaxis': {'title': 'Stock Price', 'showgrid': False},\n",
    "            }\n",
    "        }\n",
    "    ),\n",
    "\n",
    "    html.H2(f\"YOY Analysis: {ticker}\"),\n",
    "\n",
    "    dcc.Graph(\n",
    "    id='candlestick-consolidation-chart',\n",
    "    figure={\n",
    "        'data': [\n",
    "            go.Candlestick(\n",
    "                x=stock_data_last_365['Date'],\n",
    "                open=stock_data_last_365['Open'],\n",
    "                close=stock_data_last_365['Close'],\n",
    "                high=stock_data_last_365['High'],\n",
    "                low=stock_data_last_365['Low'],\n",
    "                increasing={'line': {'color': 'green'}},\n",
    "                decreasing={'line': {'color': 'red'}},\n",
    "            ),\n",
    "\n",
    "            {'x': stock_data_last_365['Date'], 'y': stock_data_last_365['Upper_Band'], 'type': 'scatter', 'mode': 'lines',\n",
    "                'line': {'width': .5, 'color': 'red'}, 'name': 'Upper Bollinger Band'},\n",
    "            {'x': stock_data_last_365['Date'], 'y': stock_data_last_365['Lower_Band'], 'type': 'scatter', 'mode': 'lines',\n",
    "                'line': {'width': .5, 'color': 'blue'}, 'name': 'Lower Bollinger Band'},\n",
    "        ],\n",
    "        'layout': {\n",
    "            'xaxis': {'rangeslider': {'visible': False}, 'showgrid': False},\n",
    "            'yaxis': {'title': 'Stock Price', 'showgrid': False},\n",
    "            'shapes': [    \n",
    "                {\n",
    "                    'type': 'line',\n",
    "                    'x0': stock_data_last_365['Date'].iloc[0],\n",
    "                    'x1': stock_data_last_365['Date'].iloc[-1],\n",
    "                    'y0': price,\n",
    "                    'y1': price,\n",
    "                    'line': {\n",
    "                        'color': 'gray',\n",
    "                        'width': 1,\n",
    "                        'dash': 'line',\n",
    "                    },\n",
    "                } for price in turning_points_kde['Close']\n",
    "            ],\n",
    "        }\n",
    "    }\n",
    "    ),\n",
    "\n",
    "    html.H2(f\"YOY Analysis: {ticker}\"),\n",
    "\n",
    "    dcc.Graph(\n",
    "    id='candlestick-consolidation-chart-blank',\n",
    "    figure={\n",
    "        'data': [\n",
    "            go.Candlestick(\n",
    "                x=stock_data_last_365['Date'],\n",
    "                open=stock_data_last_365['Open'],\n",
    "                close=stock_data_last_365['Close'],\n",
    "                high=stock_data_last_365['High'],\n",
    "                low=stock_data_last_365['Low'],\n",
    "                increasing={'line': {'color': 'green'}},\n",
    "                decreasing={'line': {'color': 'red'}},\n",
    "            ),\n",
    "\n",
    "            {'x': stock_data_last_365['Date'], 'y': stock_data_last_365['Upper_Band'], 'type': 'scatter', 'mode': 'lines',\n",
    "                'line': {'width': .5, 'color': 'red'}, 'name': 'Upper Bollinger Band'},\n",
    "            {'x': stock_data_last_365['Date'], 'y': stock_data_last_365['Lower_Band'], 'type': 'scatter', 'mode': 'lines',\n",
    "                'line': {'width': .5, 'color': 'blue'}, 'name': 'Lower Bollinger Band'},\n",
    "        ],\n",
    "        'layout': {\n",
    "            'xaxis': {'rangeslider': {'visible': False}, 'showgrid': False},\n",
    "            'yaxis': {'title': 'Stock Price', 'showgrid': False},\n",
    "        }\n",
    "    }\n",
    "\n",
    "\n",
    "),\n",
    "\n",
    "\n",
    "    ])\n",
    "\n",
    "    if __name__ == '__main__':\n",
    "        app.run_server(debug=True)\n"
